/dts-v1/;
/plugin/;

#include <dt-bindings/clock/imx8mp-clock.h>
#include <dt-bindings/gpio/gpio.h>

&{/chosen} {
	overlays {
		cam1-crosslink = __TIMESTAMP__;
	};
};

&csi1_i2c {
	crosslink_1: crosslink_mipi_1@1c {
		compatible = "scailx,crosslink";
		reg = <0x1c>;
		csi_id = <1>;
		// reset-gpios = <&gpio_expander 1 GPIO_ACTIVE_LOW>;
		status = "okay";
		mipi_csi;

		port {
			mipi_1_ep: endpoint {
				remote-endpoint = <&mipi_csi1_ep>;
				data-lanes = <1 2 3 4>;
				clock-lanes = <0>;
			};
		};
	};
	fpga1: lattice-crosslink@40 {
		compatible = "lattice,crosslink-fpga-mgr";
		reg = <0x40>;
		reset-gpios = <&gpio_expander 1 GPIO_ACTIVE_LOW>;
	};
};

&mipi_csi_1 {
	#address-cells = <1>;
	#size-cells = <0>;
	clock-frequency = <500000000>;
	status = "okay";

	port@1 {
		reg = <1>;
		mipi_csi1_ep: endpoint {
			remote-endpoint = <&mipi_1_ep>;
			data-lanes = <4>;
			csis-hs-settle = <13>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};

&cameradev {
	status = "okay";
};

